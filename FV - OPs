SELECT 

    tORDENSPROD.CODPLP AS Planta,
    tORDENSPROD.DHINST AS Data_Inicialização,
    tORDENSPROD.DHTERMINO AS Data_Finalização,
        tPROCPROD.VERSAO AS Versão_Processo,
        tPROCPROD.CODPRC AS COD_Processo,
        tPROCPROD.DESCRABREV AS Descrição_Processo,
    tORDENSPROD.STATUSPROC AS Status_OP,
    tORDENSPROD.IDIPROC AS Nro_OP,
    tORDENSPROD.NROLOTE AS Nro_Lote,
            tPRODACAB.CODPRODPA AS COD_Prod,
                tPROD.DESCRPROD AS Descr_Produto,
                tPROD.CODGRUPOPROD AS ID_Grupo,    
            tPRODACAB.QTDPRODUZIR AS Quantidade,
        tPROCPROD.ATIVO AS Processo_Ativo,
    tORDENSPROD.IDPROC AS ID_Versão_Processo
                    

FROM 
    TPRIPROC tORDENSPROD
INNER JOIN 
    TPRPRC tPROCPROD ON tORDENSPROD.IDPROC = tPROCPROD.IDPROC
INNER JOIN 
    TPRIPA tPRODACAB ON tORDENSPROD.IDIPROC = tPRODACAB.IDIPROC AND tORDENSPROD.NROLOTE = tPRODACAB.NROLOTE
INNER JOIN
    TGFPRO tPROD ON tPRODACAB.CODPRODPA = tPROD.CODPROD

WHERE 1=1 and tPROCPROD.ATIVO = 'S' and  CODPRC IN

    (10004,100003,10005,10009,10003,10001,1004)

