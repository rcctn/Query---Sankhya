SELECT

PROD.CODGRUPOPROD  ID_GRUPO,
GRUPO.DESCRGRUPOPROD GRUPO ,
PROD.CODPROD ID_PRODUTO,
DESCRPROD DESCRIÇÃO,
REFERENCIA,
AD_CODENG COD_ENG_CUSTOM,
AD_DESCRPRODCOMPLETO DESC_COMPLEMENTO_CUSTOM,
PROD.MARCA,
PROD.CODVOL UNIDADE_PADRÃO,
CODVOLCOMPRA UNIDADE_COMPRA,
USOPROD 'USADO_COMO?',
PROD.CODLOCALPADRAO COD_LOCAL,
LOCALIZACAO

FROM TGFPRO PROD

INNER JOIN TGFGRU GRUPO ON PROD.CODGRUPOPROD = GRUPO.CODGRUPOPROD

WHERE 1=1 AND PROD.CODGRUPOPROD IN (
-- Linha Micro Fixvet
100101, --BUCHAS MICRO FIXVET
100102, --INSTRUMENTAIS MICRO FIXVET
100103, --KITS MICRO FIXVET
100104, --IMPLANTES MICRO FIXVET
100105, --PLACAS MICRO FIXVET

-- Linha Mini Fixvet
100201, --BUCHAS MINI FIXVET
100202, --INSTRUMENTAIS MINI FIXVET
100203, --KITS MINI FIXVET
100204, --IMPLANTES MINI FIXVET
100205, --PLACAS MINI FIXVET

-- Ferramentas
100401, --MACHOS RETIFICADORES

-- PRODUTO INTERMEDIARIO ASTOOLS
110100, --P.I BUCHAS FIXVET
110200, --P.I INSTRUMENTAIS FIXVET
110300, --P.I KITS FIXVET
110400, --P.I PARAFUSOS FIXVET
110500, --P.I PLACAS FIXVET
110600, --P.I FERRAMENTAS

-- ACESSORIOS FIXVET
110701, --ACESSORIOS IMAS
110702, --SUPORTES

-- AS TOOLS>MP METÁLICA
120101, --MP - TITÂNIO CHAPA
120102) --MP - INOX CHAPA
